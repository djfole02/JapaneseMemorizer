<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode"
    tools:context=".Test">

    <Button
        android:id="@+id/test_guess1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="126dp"
        android:onClick="answer1"
        android:text="@string/guess1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/test_guess3"
        app:layout_constraintEnd_toStartOf="@+id/test_guess2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_guess" />

    <Button
        android:id="@+id/test_guess4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="172dp"
        android:onClick="answer4"
        android:text="@string/guess4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/test_guess3"
        app:layout_constraintTop_toBottomOf="@+id/test_guess2" />

    <Button
        android:id="@+id/test_guess3"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="172dp"
        android:onClick="answer3"
        android:text="@string/guess3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/test_guess4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_guess1" />

    <Button
        android:id="@+id/test_guess2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="126dp"
        android:onClick="answer2"
        android:text="@string/guess2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/test_guess4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/test_guess1"
        app:layout_constraintTop_toBottomOf="@+id/test_guess" />

    <TextView
        android:id="@+id/test_guess"
        android:layout_width="306dp"
        android:layout_height="146dp"
        android:layout_marginTop="108dp"
        android:background="@color/black"
        android:backgroundTint="@color/purple_500"
        android:text="@string/guess"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="269dp"
        android:text="@string/score"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:onClick="backToMain"
        android:text="@string/back"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>