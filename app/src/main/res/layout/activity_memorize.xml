<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode"
    android:visibility="visible"
    tools:context=".Memorize">

  <Button
      android:id="@+id/mem_guess1"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:layout_marginTop="126dp"
      android:onClick="answer1"
      android:text="@string/guess1"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/mem_guess3"
      app:layout_constraintEnd_toStartOf="@+id/mem_guess2"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/mem_guess" />

  <Button
      android:id="@+id/mem_guess2"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:layout_marginTop="126dp"
      android:onClick="answer2"
      android:text="@string/guess2"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/mem_guess4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/mem_guess1"
      app:layout_constraintTop_toBottomOf="@+id/mem_guess" />

  <Button
      android:id="@+id/mem_guess3"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:layout_marginTop="22dp"
      android:layout_marginBottom="172dp"
      android:onClick="answer3"
      android:text="@string/guess3"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/mem_guess4"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/mem_guess1" />

  <Button
      android:id="@+id/mem_guess4"
      android:layout_width="120dp"
      android:layout_height="80dp"
      android:layout_marginTop="22dp"
      android:layout_marginBottom="172dp"
      android:onClick="answer4"
      android:text="@string/guess4"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/mem_guess3"
      app:layout_constraintTop_toBottomOf="@+id/mem_guess2" />

  <TextView
      android:id="@+id/mem_guess"
      android:layout_width="306dp"
      android:layout_height="146dp"
      android:layout_marginTop="108dp"
      android:background="@color/black"
      android:backgroundTint="@color/purple_500"
      android:text="@string/guess"
      android:textAlignment="center"
      android:textAllCaps="true"
      android:textColor="@color/white"
      android:textSize="96sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/lives"
      android:layout_width="78dp"
      android:layout_height="25dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/lives"
      android:textAlignment="textStart"
      android:textColor="#00FFFF"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/score"
      android:layout_width="92dp"
      android:layout_height="27dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="17dp"
      android:text="@string/score"
      android:textColor="#00FFFF"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="144dp"
      android:layout_height="50dp"
      android:layout_marginTop="252dp"
      android:text="@string/score"
      android:textAlignment="center"
      android:textColor="#00FFFF"
      android:textSize="24sp"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:onClick="backToMain"
      android:text="@string/back"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>